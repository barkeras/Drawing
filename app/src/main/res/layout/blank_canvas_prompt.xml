<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/blankCanvasPrompt"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/promptSizeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Size:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_weight="1.27"/>


        <EditText
            android:id="@+id/promptWidthInput"
            android:layout_width="match_parent"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:selectAllOnFocus="true"
            android:text="2000"
            android:gravity="right">

            <requestFocus />

        </EditText>

        <TextView
            android:id="@+id/promptXtextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="x"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_weight="1.3"
            android:gravity="center_horizontal"/>


        <EditText
            android:id="@+id/promptHeightInput"
            android:layout_width="match_parent"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:selectAllOnFocus="true"
            android:text="2000">


        </EditText>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/promptBackgroundTextView"
            android:text="Background Color"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_centerVertical="true"/>

        <View
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/promptBackgroundColorBox"
            android:layout_toRightOf="@id/promptBackgroundTextView"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>



</LinearLayout>